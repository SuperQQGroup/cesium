{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": ["Source"],
        "exclude": ["Source/ThirdParty", "Source/Workers"],
        "includePattern": ".+\\.(ts|js)(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": ["node_modules/better-docs/typescript", "./Tools/jsdoc/cesiumTags"],
    "templates": {
        "cleverLinks": true,
        "default": {
            "outputSourceFiles": false
        },
        "sourceUrl": "https://github.com/CesiumGS/cesium/blob/{version}/Source/{filename}"
    },
    "opts": {
        "destination": "Build/Documentation",
        "template": "node_modules/better-docs",
        "recurse": true
    }
}
